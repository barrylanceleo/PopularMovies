<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.barrylanceleo.popularmovies">

    <!-- permissio to access theMovieDb.org -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- permission to store images to file -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MovieGridActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MovieDetailsActivity"
            android:label="@string/title_activity_movie_details"
            android:parentActivityName=".activities.MovieGridActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MovieGridActivity" />
        </activity>

        <provider
            android:name=".data.MovieProvider"
            android:authorities="com.barrylanceleo.popularmovies.data" />
    </application>

</manifest>